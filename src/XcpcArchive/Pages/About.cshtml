@page "/about"
@model AboutModel
@{
    ViewData["Title"] = "About";
}

<div class="container-fluid">
  <div class="row">
    <div class="col-8">
      <div class="card">
        <div class="card-body p-0">
          <p class="indent">
            XCPC Archive is a tool for achiving contest data with online database, providing online
            access for judges and technical supports. We also support transferring data during contest
            time, provide data credibility if there is dissension.
          </p>

          <table class="table table-sm table-hover table-striped mb-4">
            <tbody>
              <tr>
                <td>Source Code</td>
                <td><a href="https://github.com/namofun/xcpc-archive" target="_blank">https://github.com/namofun/xcpc-archive</a></td>
              </tr>
              <tr>
                <td>CN XCPC Tools</td>
                <td><a href="https://github.com/cn-xcpc-tools" target="_blank">https://github.com/cn-xcpc-tools</a></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-4">
      <img src="logo.png" height="240"/>
    </div>
  </div>
</div>
