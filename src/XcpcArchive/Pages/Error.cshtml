@page "/error"
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container-fluid">
  <div class="row">
    <div id="errors" class="col-12">
      <p class="text-danger">An error occurred while processing your request.</p>
      
      @if (Model.ShowRequestId)
      {
        <p>
          Request ID: <code>@Model.RequestId</code>
        </p>
      }
    </div>
  </div>
</div>
